        <collision>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
            <origin xyz="0 0 0"/>
        </collision>  
    </link>

    <gazebo reference= "my_box">
        <material>Gazebo/Blue</material>
    </gazebo>

</robot>