
<robot name="simple_box">
    <link name="my_box">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.1"/>
            <inertia ixx="0.0000416" ixy="0" ixz="0" iyy="0.0000416" iyz="0" izz="0.0000416"/>
        </inertial>
        <visual>
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
            <origin xyz="0 0 0"/>
